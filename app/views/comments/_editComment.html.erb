<div class="card text-dark bg-light mb-3" style="max-width: 70rem; margin-left:  200px;" id="card-<%= @comment.id %>">
    <h5 class="card-header">
        <%= @comment.email %>
    </h5>
    <div class="card-body">
        <form method="PUT" action="/comments/<%= @comment.id %>" data-remote="true">
            <input name="comment" type="text" class="form-control" id="comment-<%= @comment.id %>"
                value="<%= @comment.comment %>">
            <br> </br>
            <a href="/comments/<%= @comment.id %>" data-method="DELETE" class="btn btn-danger" data-remote="true"
                id='deletePost'>Delete</a>
            <button type="Submit" class="btn btn-warning">Update</button>
            <a href="/comments/<%= @comment.id %>" data-method="GET" data-remote="true" class="btn btn-dark">Cancel</a>
        </form>
    </div>
</div>