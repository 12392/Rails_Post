<div  class ="col-6" style = "margin: 100px auto 100px auto ;">
<h2 style="text-align:center" class="text-white bg-dark" style="text-align:center;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field  mb-2" style="  margin-left:250px;margin-right:300px;width:50%">
    <%= f.label :email ,class: "form-label text-white bg-dark" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control w-75" %>
  </div>

  <div class="field  mb-2" style="  margin-left:250px;margin-right:300px;width:50%">
    <%= f.submit "Send me reset password instructions" ,class: "btn btn-primary" %>
  </div>
<% end %>

<div style="margin-left:250px;margin-right:300px;width:50%">
<%= render "devise/shared/links" %>
</div>
</div>
